<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="STDOUT"/>
  </root>

  <logger name="xyz.poeschl.pixelmaze" level="debug"/>
  <!--Set to debug to see deleted lines of grid-->
  <logger name="visualDebug" level="info"/>
</configuration>
